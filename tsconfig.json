  "compilerOptions": {
    "strict": true,
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
